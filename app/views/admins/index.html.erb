<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<div class="jumbotron container">
  <center>
    <h1>Admins</h1>

    <table id="admintable" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Username</th>

        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.name %></td>
            <td><%= admin.username %></td>

            <td><%= link_to 'Show', admin %></td>
            <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
            <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
    <div class="col-sm-4"><%= button_to "New Admin", new_admin_path, :method => "get" ,:class=>"btn btn-primary"%></div>
    <div class="col-sm-4"><%= button_to "View Employers", employerindexforadmin_path, :method => "get" ,:class=>"btn btn-primary"%></div>
    <div class="col-sm-4"><%= button_to "View Categories", index_categories_path, :method => "get" ,:class=>"btn btn-primary"%></div>
  </center>
</div>