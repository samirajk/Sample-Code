<h1>Listing jobapplications</h1>

<table>
  <thead>
  <tr>
    <th>Coverletter</th>
    <th>Dateofapplication</th>
    <th>Status</th>
    <th>Applicant</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @list.each do |jobapplication| %>
      <tr>
        <td><%= jobapplication.coverletter %></td>
        <td><%= jobapplication.dateofapplication %></td>
        <td><%= jobapplication.status %></td>
        <td><%= link_to jobapplication.jobseeker.name, jobseeker_path(jobapplication.jobseeker.id) %></td>
        <td><%= link_to 'Edit', {controller: "jobapplications" , action: "editstatus" , :id => jobapplication.id }%></td>
        <td><%= link_to 'Destroy', jobapplication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', main_page_path %>
