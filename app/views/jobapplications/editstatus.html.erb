<center>
  <% if current_employer%>
      Logged in as <%= current_employer.email %>.
      <%= link_to "Log out", log_out_path %>
  <% end %>

<h1>Edit Status</h1>

<%= form_for(@list, :url => {:action => 'update', :id => @list.id}) do |f| %>
    <div class="field">
      Title</br>
      <%= @list.coverletter%>
    </div>
    <div class="field">
      Application Deadline</br>
      <%= @list.dateofapplication %>
    </div>

    <div class="field">
      Status</br>
      <%= f.select :status,options_for_select({"Applied" => "Applied", "Not Selected" => "Not Selected", "Selected" => "Selected"}) %>
    </div>
    <div class="actions">
      <%= f.submit "Change" %>
    </div>
<% end %>


<%= link_to 'Back', {controller: "jobapplications" , action: "applicationbyjob" , :id => @list.id }  %>
</center>