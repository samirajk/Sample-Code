

<h1>Sign Up</h1>
<% if @jobseeker.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @jobseeker.errors.full_messages %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @jobseeker do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.label :phonenumber %><br />
      <%= f.text_field :phonenumber %>
    </p>
    <p>
      <%= f.label :skills %><br />
      <%= f.text_area :skills %>
    </p>
    <p>
      <%= f.label :resume %><br />
      <%= f.text_area :resume %>
    </p>

    <p class="button"><%= f.submit %></p>
<% end %>
<%= link_to 'Back', root_url %>

